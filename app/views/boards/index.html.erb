<div class="container">
  <%= link_to new_board_path, class: 'btn btn-sm btn-primary float-right', title: 'New Board' do %>
    <i class="fa fa-plus"></i> New Board
  <% end %>
  <h2>Boards</h2>
  <p id="notice"><%= notice %></p>
  <div class="row">
    <% @boards.each do |board| %>
      <div class="col">
        <div class="card">
          <div class="card-header">
            <div class="card-title">
              <%= link_to new_task_path, class: 'btn btn-sm btn-primary float-right', title: 'New Task' do %>
                <i class="fa fa-plus"></i> New Task
              <% end %>
              <%= link_to board.title, board %>
            </div>
          </div>
          <div class="card-body">
            <div class="card-text">
              <table class="table">
              <thead>
                <tr>
                  <th scope="col">Title</th>
                  <th scope="col">Description</th>
                  <th scope="col">Stage</th>
                  <th scope="col">Done</th>
                </tr>
              </thead>
              <tbody>
                <% board.tasks.each do |board_task| %>
                  <tr>
                    <td><%= board_task.title %></td>
                    <td><%= board_task.description %></td>
                    <td>task estagio</td>
                    <td>true</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
